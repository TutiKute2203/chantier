<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="tablet.mob.appchantier.function.activity.MainViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".function.activity.MainActivity">

        <include
            android:id="@+id/main_actionbar_layout"
            layout="@layout/header_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_actionbar_layout"
            android:background="@color/White"
            tools:ignore="DisableBaselineAlignment">

            <FrameLayout
                android:id="@+id/chantier_fl_left_container"
                android:layout_width="0dp"
                android:paddingRight="1dp"
                android:background="@drawable/bg_white_border_grey_right"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:visibility="@{viewModel.mLeftContainerVisibility}"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <FrameLayout
                android:id="@+id/main_single_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7" />
        </LinearLayout>

    </RelativeLayout>
</layout>
